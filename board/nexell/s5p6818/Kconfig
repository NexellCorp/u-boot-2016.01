choice
	prompt "Board select"

config TARGET_S5P6818_DRONE
	bool "S5P6818_DRONE"
	help
	  Support for s5p6818 drone platform.

config TARGET_ARTIK710_RAPTOR
	bool "ARTIK710_RAPTOR"
	help
	  Support for artik710_raptor platform.

config TARGET_AVN_REF
	bool "AVN_REF"
	help
	  Support for S5P6818 avn ref platform.

config TARGET_KICK_ST
	bool "KICK_ST"
	help
	  Support for S5P6818 kick st platform.

config TARGET_ARTIK711S_RAPTOR
	bool "ARTIK711S_RAPTOR"
	help
	  Support for artik711s_raptor platform.

config TARGET_S5P6818_CON_SVMA
	bool "S5P6818_CON_SVMA"
	help
	  Support for s5p6818 con_svma platform.

endchoice

config SYS_VENDOR
	default "nexell"

config SYS_BOARD
	default "s5p6818"

config SYS_CONFIG_NAME
	string "Board header file"
	help
	  This option should contain the base name of board header file.
	  The header file include/configs/<CONFIG_SYS_CONFIG_NAME>.h
	  should be included from include/config.h.

source "board/nexell/common/Kconfig"
