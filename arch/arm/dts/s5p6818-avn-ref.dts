/dts-v1/;
#include "s5p6818.dtsi"
#include "s5p6818-avn-ref-nxe2000.dtsi"

/ {
	model = "Avn reference board based on Nexell s5p6818";
	cpu-model = "S5p6818";

	compatible = "nexell,avn-ref", "nexell,avn",
		   "nexell,s5p6818";

	mmc0:mmc@c0062000 {
		frequency = <50000000>;
		nexell,drive_dly = <0x0>;
		nexell,drive_shift = <0x03>;
		nexell,sample_dly = <0x00>;
		nexell,sample_shift = <0x02>;
		status = "okay";
	};

	mmc2:mmc@c0069000 {
		frequency = <50000000>;
		nexell,drive_dly = <0x0>;
		nexell,drive_shift = <0x03>;
		nexell,sample_dly = <0x00>;
		nexell,sample_shift = <0x02>;
		nexell,bus-width = <8>;
		index = <2>;
		status = "okay";
	};

	ehci:usbhost@c0030000 {
		status = "okay";
	};

	dwc2otg@c0040000 {
		status = "okay";
	};

	nxe2000_gpio:i2c_gpio@0 {
		compatible = "i2c-gpio";
		#address-cells = <1>;
		#size-cells = <0>;
		gpios = <&gpio_e 8 1>,	/* SDA */
		      <&gpio_e 9 1>;	/* SCL */

		i2c-gpio,delay-us = <3>;
		nxe2000_gpio@32 {
			compatible = "nexell,nxe2000";
			reg = <0x32>;
		};
	};

	nx_i2c_gpio:i2c_gpio@5 {
		#address-cells = <1>;
		#size-cells = <0>;
		compatible = "i2c-gpio";
		gpios = <&gpio_c 27 0>,
			<&gpio_c 25 0>;
		i2c-gpio,delay-us = <1>;
		nx_i2c_gpio@44 {
			compatible = "nexell,nx_i2c_gpio";
			reg = <0x44>;
			sda_pad = <1>;
			scl_pad = <1>;
		};
	};

	dp0:dp@c0102800 {
	        status = "okay";
	        module = <0>;
	        lcd-type = "lvds";

		dp-device {
			format = <0>;	/* 0:VESA, 1:JEIDA */
		};

		dp-sync {
			h_active_len = <1024>;
			h_front_porch = <160>;
			h_back_porch = <140>;
			h_sync_width = <20>;
			v_active_len = <600>;
			v_front_porch = <12>;
			v_back_porch = <20>;
			v_sync_width = <3>;
		};

		dp-ctrl {
			clk_src_lv0 = <3>;
			clk_div_lv0 = <15>;
			clk_src_lv1 = <7>;
			clk_div_lv1 = <1>;
			out_format = <2>;
		};

		dp-planes {
			layer_top {
				screen_width = <1024>;
				screen_height = <600>;
				back_color = <0x0>;
			};

			layer_1 {	/* RGB 1 */
				width = <1024>;
				height = <600>;
				format = <0x06530000>;
				pixel_byte = <4>;
			};
		};
	};
};
